<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.mapper.AdminMapper">

    <select id="selectAll" resultType="com.example.entity.Admin">
        select * from admin
        <where>
            <if test="name != null">name like concat('%',#{name},'%')</if>
        </where>
        order by id desc
    </select>

    <select id="selectById" resultType="com.example.entity.Admin">
        select * from admin where id = #{id}
    </select>

    <select id="selectList" parameterType="com.example.entity.Admin" resultType="com.example.entity.Admin">
        SELECT * FROM admin
        <where>
            <!-- 根据ID查询 -->
            <if test="id != null">
                AND id = #{id}
            </if>

            <!-- 账号精确查询 -->
            <if test="account != null and account != ''">
                AND account = #{account}
            </if>

            <!-- 姓名模糊查询 -->
            <if test="name != null and name != ''">
                AND name LIKE CONCAT('%', #{name}, '%')
            </if>

            <!-- 密码查询 -->
            <if test="password != null and password != ''">
                AND password = #{password}
            </if>
        </where>
        ORDER BY id DESC
    </select>

    <insert id="insert" parameterType="com.example.entity.Admin">
        insert into admin (id, name, account, password) values (#{id}, #{name}, #{account}, #{password})
    </insert>

    <update id="update" parameterType="com.example.entity.Admin">
        update admin set account = #{account}, name = #{name}, password = #{password} where id = #{id}
    </update>

    <delete id="deleteById" parameterType="int">
        delete from admin where id = #{id}
    </delete>

</mapper>